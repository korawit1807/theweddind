<!-- script -->
<script>
const auth = "MjUxMTIwMjNwb21kb21ldGhld2VkZGluZw==";
function btnSaved() {
    const name = $("#name").val()
    const blessing = $("#blessing").val()
    const image = $("#output").attr('src')
    if(!(name && blessing)){
       //ฝาก ADD ALERT 
        console.log("Require Field Name , Blessing")
        return
    }
    const data = {
        name: name,
        blessing: blessing,
        image: image
    }
    $.ajax({
        type: "POST",
        url: "/service/api/v1/blessing/create",
        headers: {
            authorization: "Bearer " + auth
        },
        data: data,
        beforeSend: function(){
            Swal.fire({
                title: "waiting",
                showConfirmButton: false,
                html: `
                    <div class="spinner-grow text-primary" role="status">
                        <span class="visually-hidden"></span>
                    </div>
                    <div class="spinner-grow text-success" role="status">
                        <span class="visually-hidden"></span>
                    </div>
                    <div class="spinner-grow text-info" role="status">
                        <span class="visually-hidden"></span>
                    </div>
                    <div class="spinner-grow text-primary" role="status">
                        <span class="visually-hidden"></span>
                    </div>
                    <div class="spinner-grow text-success" role="status">
                        <span class="visually-hidden"></span>
                    </div>
                    <div class="spinner-grow text-info" role="status">
                        <span class="visually-hidden"></span>
                    </div>
                    `
                });
        },
        success: function(data){
            Swal.fire({
                title: "Thank you",
                text: `ขอบคณ คุณ "${data?.data?.name}" ที่มอบคำอวยพร`,
                icon: "success",
                timer: 3000,
                showConfirmButton: false,
            }).then(() => {
                window.location.replace("/")
            })
        },
        failure: function(errMsg) {
            Swal.fire({
                title: "something went wrong!",
                text: `ผิดพลาดกรุณาลองใหม่`,
                icon: "warning",
                timer: 2000,
                showConfirmButton: false,
            }).then(() => {
                window.location.replace("/")
            })
        }
  });
}

function loadFile (event) {
    const reader = new FileReader();
    reader.onload = function(){
      const output = document.getElementById('output');
      output.src = reader.result;
    }    
    reader.readAsDataURL(event.target.files[0]);
    $("#imgDiv").attr("hidden", false);
  };

</script>

